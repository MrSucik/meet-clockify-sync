# Google Meet API Configuration
# Create OAuth 2.0 credentials at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:3000/oauth2callback

# Google User Configuration
GOOGLE_USER_EMAIL=your.email@gmail.com

# Clockify API Configuration
# Get your API key from: https://app.clockify.me/user/settings
CLOCKIFY_API_TOKEN=your_clockify_api_token_here

# Application Configuration
NODE_ENV=development
SYNC_DAYS=30

# API Endpoints
CLOCKIFY_API_BASE=https://api.clockify.me/api

# Rate Limiting Configuration
CLOCKIFY_API_DELAY=50

# Project Configuration
MEET_PROJECT_NAME=Google Meet

# Dry Run Configuration (set to true to preview without creating entries)
DRY_RUN=false

# Database Configuration
DATABASE_URL=postgresql://meet_user:changeme@localhost:5432/meet_clockify

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Server Configuration
SERVER_PORT=3000

# Scheduler Configuration (cron pattern: minute hour day month weekday)
# Examples: "0 * * * *" (every hour), "*/30 * * * *" (every 30 minutes)
SYNC_SCHEDULE=0 * * * *

# Basic Authentication
BASIC_AUTH_USERNAME=admin
BASIC_AUTH_PASSWORD=changeme
